<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin1"
        android:layout_marginTop="@dimen/margin1"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginBottom="@dimen/margin1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/elevationInteraction">

        <!-- In FrameLayout so background can be applied to it for some styles -->
        <FrameLayout
            android:id="@+id/flIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:elevation="@dimen/elevationInteraction"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="@dimen/margin6"
                android:layout_height="@dimen/margin6"
                android:gravity="center_horizontal|bottom"
                android:background="@mipmap/ic_star"/>

        </FrameLayout>

        <TextView android:id="@+id/tvTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:clipToPadding="false"
                  android:textSize="32sp"
                  android:textColor="@android:color/black"/>

    </LinearLayout>

</LinearLayout>